<%= form_with(model: bookmark,data: {confirm: 'Save Bookmark?'}, local: false) do |form| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
        <% bookmark.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class= "container">
<h1>Create a BookMark</h1>
  <div class="form-row">
      <div class="form-group col-md-4">
        <%= form.text_field :title, autofocus: true, autocomplete: "Name", class:'form-control', placeholder: 'Title' %>
      </div>

      <div class="form-group col-md-4">
        <%= form.text_field :url, autofocus: true, autocomplete: "URL", class:'form-control', placeholder: 'URL' %>
      </div>
  </div>

  <div class="form-row">
      <div class="form-group col-md-4">
        <h5><%= form.label "Select Kinds" %></h5> 
        <%= form.select :kind_id, Kind.all.collect {|k| [k.name, k.id]}, {} ,id: :bookmark_kind_id, include_blank:false %>

      </div>
      
      <div class="form-group col-md-4">
        <h5><%= form.label "Select Categories" %></h5>  
        <%= form.select :category_id, Category.all.collect {|c| [c.name, c.id]}, {} ,id: :bookmark_category_id, include_blank:false %>
      </div>
  </div>

      <div class="actions">
        <%= form.submit class: 'btn btn-warning rounded-pill' %>
      </div>

</div>

<% end %>
