<p id="notice"><%= notice %></p>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Big Bang Marks</h1>
    <p class="lead">These are some BookMarks showing the discography of Big Bang, including DVDs and solo material!</p>
  </div>
</div>


<div class="container">
<div class="m-4">
  <%= render 'form', bookmark: @bookmark %>
</div>

<table class="table table-hover" id="table_bookmarks">
<h1>Current BookMarks</h1>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Category</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <tr>
      <%= render @bookmarks %>
     </tr>
  </tbody>
</table>

<br>

  <h1 class="text-center">Graphics</h1>
  <div class="row">
    <div class="col">
      <h3>Categories</h3>
      <%= pie_chart @bookmarks_cat %>
    </div>

    <div class="col">
    <h3>Kind</h3>
    <%= pie_chart @chartz %>
    </div>
  </div>

</div>